# snapraid-btrfs configuration

[snapraid]
; Path to the snapraid executable
executable = /usr/bin/snapraid

; Path to the snapraid config
config = {{ snapraid_config_path }}
deletethreshold = 1000
touch = false

[logging]
file = /root/snapraid.log
; Size in KiB
maxsize = 5000

[email]
sendon = success,error
short = true
subject = [SnapRAID] Status Report
from = {{ snapraid_email_from }}
to = {{ snapraid_email_to }}
; Size in KiB
maxsize = 500

[smtp]
host = smtp.gmail.com
port = 465
ssl = true
tls = false
user = {{ snapraid_email_smtp_user }}
password = {{ snapraid_email_smtp_password }}

[scrub]
enabled = true
; Percentage it will check
plan = 10
older-than = 10
